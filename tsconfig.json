{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["ES2020"],
		"outDir": "out",
		"rootDir": "src",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"removeComments": true,
		"types": ["vscode", "node"]
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}

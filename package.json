{
  "name": "commentlinking",
  "displayName": "Comment Linking",
  "description": "ðŸ”— Link between comments in code. Create anchors and jump to them from anywhere",
  "version": "1.0.2",
  "icon": "resources/icon.png",
  "author": {
    "name": "Viktor Kratiuk",
    "email": "kratiuk@proton.me"
  },
  "license": "MIT",
  "main": "./out/extension.js",
  "publisher": "kratiuk",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kratiuk/commentlinking.git"
  },
  "keywords": [
    "Comment Linking",
    "Comment Link",
    "Comment Links",
    "Comment",
    "Comments",
    "Links",
    "Link",
    "Linking"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "node esbuild.config.mjs",
    "watch": "node esbuild.config.mjs --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "prepare": "husky",
    "package": "pnpm dlx vsce package",
    "count": "cloc .vscode src scripts package.json .github/workflows"
  },
  "contributes": {
    "languages": [
      {
        "id": "commentlinkingignore",
        "aliases": [
          "Comment Linking Ignore"
        ],
        "filenames": [
          ".commentlinkingignore"
        ],
        "extensions": [
          ".commentlinkingignore"
        ],
        "icon": {
          "light": "./resources/icon.png",
          "dark": "./resources/icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "commentlinkingignore",
        "scopeName": "source.commentlinkingignore",
        "path": "./syntaxes/commentlinkingignore.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Comment Linking",
      "properties": {
        "commentLinking.useGitignore": {
          "type": "boolean",
          "default": true,
          "description": "Use .gitignore patterns in addition to .commentlinkingignore for filtering files. When enabled, files matching .gitignore patterns will also be excluded from processing."
        }
      }
    },
    "commands": [
      {
        "command": "commentlinking.copyAnchorId",
        "title": "Copy Anchor ID"
      },
      {
        "command": "commentlinking.openAnchor",
        "title": "Open Anchor"
      },
      {
        "command": "commentlinking.openPreview",
        "title": "Open with Comment Linking Preview"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commentlinking",
          "title": "Anchors",
          "icon": "resources/viewcontainer.svg"
        }
      ]
    },
    "views": {
      "commentlinking": [
        {
          "id": "commentlinking.anchors",
          "name": "Anchors",
          "icon": "resources/viewcontainer.svg"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "commentlinking.copyAnchorId",
          "when": "false"
        },
        {
          "command": "commentlinking.openAnchor",
          "when": "false"
        },
        {
          "command": "commentlinking.openPreview",
          "when": "resourceLangId == markdown"
        }
      ],
      "explorer/context": [
        {
          "command": "commentlinking.openPreview",
          "when": "resourceLangId == markdown",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "commentlinking.openPreview",
          "when": "resourceLangId == markdown",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "commentlinking.copyAnchorId",
          "when": "view == commentlinking.anchors && viewItem == anchor",
          "group": "inline"
        }
      ]
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "esbuild": "^0.25.12",
    "esbuild-plugin-tsconfig-paths": "^1.0.2",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "typescript": "^5.9.3"
  }
}

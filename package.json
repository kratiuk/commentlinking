{
  "name": "commentlinking",
  "displayName": "Comment Linking",
  "description": "ðŸ”— Link between comments in code. Create anchors and jump to them from anywhere",
  "version": "0.3.0",
  "icon": "resources/icon.png",
  "author": {
    "name": "Viktor Kratiuk",
    "email": "kratiuk@proton.me"
  },
  "license": "MIT",
  "main": "./out/extension.js",
  "publisher": "kratiuk",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization",
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kratiuk/commentlinking.git"
  },
  "keywords": [
    "Comment Linking",
    "Comment Link",
    "Comment Links",
    "Comment",
    "Comments",
    "Links",
    "Link",
    "Linking"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "pnpm dlx vsce package",
    "count": "cloc .vscode src package.json"
  },
  "contributes": {
    "configuration": {
      "title": "Comment Linking",
      "properties": {
        "commentLinking.customFileTypes": {
          "type": "object",
          "default": {},
          "description": "Custom file extensions with their comment syntax. Example: {\".vue\": \"js\", \".go\": \"js\", \".sh\": \"python\"}",
          "additionalProperties": {
            "type": "string",
            "enum": [
              "js",
              "python"
            ],
            "description": "Comment syntax type: 'js' for // comments, 'python' for # comments"
          }
        },
        "commentLinking.enableLegacySyntax": {
          "type": "boolean",
          "default": false,
          "description": "Enable legacy syntax: [Preview](#AnchorID) for anchors and [Link](AnchorID) for links. When disabled, only new backlink syntax [[AnchorID|Preview]] and [[#AnchorID|Link]] is used."
        }
      }
    },
    "commands": [
      {
        "command": "commentlinking.copyAnchorId",
        "title": "Copy Anchor ID"
      },
      {
        "command": "commentlinking.openAnchor",
        "title": "Open Anchor"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commentlinking",
          "title": "Anchors",
          "icon": "resources/viewcontainer.svg"
        }
      ]
    },
    "views": {
      "commentlinking": [
        {
          "id": "commentlinking.anchors",
          "name": "Anchors",
          "icon": "resources/viewcontainer.svg"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "commentlinking.copyAnchorId",
          "when": "false"
        },
        {
          "command": "commentlinking.openAnchor",
          "when": "false"
        }
      ],
      "view/item/context": [
        {
          "command": "commentlinking.copyAnchorId",
          "when": "view == commentlinking.anchors && viewItem == anchor",
          "group": "inline"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "typescript": "^5.4.0"
  }
}

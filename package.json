{
	"name": "commentlinking",
	"displayName": "Comment Linking",
	"description": "ðŸ”— Link between comments in code. Create anchors and jump to them from anywhere",
	"version": "0.2.0",
	"icon": "resources/icon.png",
	"author": {
		"name": "Viktor Kratiuk",
		"email": "kratiuk@proton.me"
	},
	"license": "MIT",
	"main": "./out/extension.js",
	"publisher": "kratiuk",
	"engines": {
		"vscode": "^1.75.0"
	},
	"categories": [
		"Programming Languages",
		"Visualization",
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/kratiuk/commentlinks.git"
	},
	"keywords": [
		"Comment Linking",
		"Comment Link",
		"Comment",
		"Comments",
		"Links",
		"Link",
		"Linking"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"scripts": {
		"vscode:prepublish": "pnpm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"package": "pnpm dlx vsce package"
	},
	"contributes": {
		"configuration": {
			"title": "Comment Linking",
			"properties": {
				"commentLinking.customFileTypes": {
					"type": "object",
					"default": {},
					"description": "Custom file extensions with their comment syntax. Example: {\".vue\": \"js\", \".go\": \"js\", \".sh\": \"python\"}",
					"additionalProperties": {
						"type": "string",
						"enum": [
							"js",
							"python"
						],
						"description": "Comment syntax type: 'js' for // comments, 'python' for # comments"
					}
				}
			}
		},
		"commands": [
			{
				"command": "commentlinks.copyAnchorId",
				"title": "Copy Anchor ID"
			},
			{
				"command": "commentlinks.openAnchor",
				"title": "Open Anchor"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "commentlinks",
					"title": "Anchors",
					"icon": "resources/viewcontainer.svg"
				}
			]
		},
		"views": {
			"commentlinks": [
				{
					"id": "commentlinks.anchors",
					"name": "Anchors",
					"icon": "resources/viewcontainer.svg"
				}
			]
		},
		"menus": {
			"commandPalette": [
				{
					"command": "commentlinks.copyAnchorId",
					"when": "false"
				},
				{
					"command": "commentlinks.openAnchor",
					"when": "false"
				}
			],
			"view/item/context": [
				{
					"command": "commentlinks.copyAnchorId",
					"when": "view == commentlinks.anchors && viewItem == anchor",
					"group": "inline"
				}
			]
		}
	},
	"devDependencies": {
		"@types/vscode": "^1.75.0",
		"typescript": "^5.4.0"
	}
}
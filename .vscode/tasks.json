{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"group": "build",
			"presentation": {
				"reveal": "never"
			},
			"isBackground": true,
			"problemMatcher": {
				"owner": "esbuild",
				"pattern": [
					{
						"regexp": "^\\s*(.+):(\\d+):(\\d+):\\s*(.+)$",
						"file": 1,
						"line": 2,
						"column": 3,
						"message": 4
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "\\[esbuild\\] watching",
					"endsPattern": "\\[esbuild\\] watching"
				}
			}
		}
	]
}
